<h1>새로운 아티클 작성</h1>

<%= form_with model: @article do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field(:title,class: 'form-control input-lg') %>
    <% @article.errors[:title].each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area(:body, class: 'form-control') %>
    <% @article.errors[:body].each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit(class: 'btn btn-primary') %>
  </div>
<% end %>

<%= link_to "돌아가기", articles_path, :class => 'btn btn-warning' %>
